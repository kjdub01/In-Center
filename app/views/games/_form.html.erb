<%= form_for @game do |f| %>
  <%= f.label :referee %>
  <%= f.collection_select(:user_id, User.all, :id, :name) %><br>
  <%= f.label :starts_at %>
  <%= f.text_field :starts_at %><br>

  <%= f.fields_for :games_teams do |team| %>
    <%= team.label :home_team %>
    <%= team.collection_select(:team_id, Team.all, :id, :team_name) %><br>
    <%= team.label "Home Team?" %> <br>
    <%= team.check_box :home_team, {}, true, false %> <br>
    <%= team.label :away_team %>
    <%= team.collection_select(:team_id, Team.all, :id, :team_name) %><br>
  <% end %>
  <%= f.submit "Create Game" %>
<% end %>
