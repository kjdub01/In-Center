<%= form_for @game do |f| %>
  <%= f.label :referee %>
  <%= f.collection_select(:user_id, User.all, :id, :name) %><br>
  <%= f.label :starts_at %>
  <%= time_select(:game, 'starts_at', {:minute_step => 15, :ampm => true}) %><br>
  <%= f.label :date %>
  <%= date_select(:game, 'date', order: [:month, :day, :year]) %><br>


  <%= f.fields_for :games_team do |team| %>
    <%= team.label :team %>
    <%= team.collection_select(:team_id, Team.all, :id, :team_name) %><br>
    <%= team.label "Home Team?" %> <br>
    <%= team.check_box :home_team, {}, true, false %> <br>
  <% end %>
  <%= f.submit "Create Game" %>
<% end %>
